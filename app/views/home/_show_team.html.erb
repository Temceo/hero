    
<% @team_number.times do %>
  <div class="row">
    <div class="col-md-4">

    <% rand_number = rand(1..1000) %>
    <% set_number = %w(set1 set2 set3 set4).sample %>
    <% bg = %w(bg1 bg2).sample %>
    <% avatar = Faker::Avatar.image(slug: rand_number, size: "300x300", format: "png", set: set_number, bgset: bg) %>
    <img src="<%= avatar %>" alt="Superhero avatar">
    </div>

    <div class="col-md-4">
      <h3>
        Your Superhero Name: <br>
        <span class="red"><%=  Faker::Superhero.name %></span>
      </h3>

      <h3>
        Your Superhero Power: <br>
        <span class="red"><%= Faker::Superhero.power %></span>
      </h3><br><br>
      
      <h4>
        Your Undercover Day Job is: <br>
        <span class="corp_red"><%= Faker::Job.title  %></span>
      </h4>
      
      <h4>
        Your Corporate Superpower is: <br>
        <span class="corp_red"><%= Faker::Company.bs.titleize %></span>
      </h4>
    </div>

    <div class="col-md-4">
    
    </div>
  </div>
  <div class="row">
    <div class="col-md-12">
      <hr>
    </div>
  </div>
<% end %>