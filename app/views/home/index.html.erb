
<div class="panel panel-default">
  <div class="panel-heading">
    <h3 class="panel-title grey">
      <%= link_to 'Click here to generate a new superhero', root_path %>
    </h3>
  </div>
  <div class="panel-body">
    <div class="row">
      <div class="col-md-4">
       <img src="<%= @avatar %>" alt="Superhero avatar">
      </div>

      <div class="col-md-4">
        <h3>
          Your Superhero Name: <br>
          <span class="red"><%= @hero_name %></span>
        </h3>

        <h3>
          Your Superhero Power: <br>
          <span class="red"><%= @hero_power %></span>
        </h3><br><br>
        
        <h4>
          Your Undercover Day Job is: <br>
          <span class="corp_red"><%= @corp_title %></span>
        </h4>
        
        <h4>
          Your Corporate Superpower is: <br>
          <span class="corp_red"><%= @corp_power %></span>
        </h4>
      </div>

      <div class="col-md-4">
      
      </div>
    </div>
  </div>
  <div class="panel-footer"><%=link_to 'Create a whole superhero team', home_team_path %></div>
</div>

